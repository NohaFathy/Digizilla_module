<odoo>
    <data>

        <!-- Kanban View -->
        <record id="view_digizilla_kanban" model="ir.ui.view">
            <field name="name">digizilla.digizilla.kanban</field>
            <field name="model">digizilla.digizilla</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="country"/>
                    <field name="joining_date"/>
                    <field name="tags"/>
                </kanban>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_digizilla_form" model="ir.ui.view">
            <field name="name">digizilla.digizilla.form</field>
            <field name="model">digizilla.digizilla</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="country"/>
                            <field name="joining_date"/>
                            <field name="tags"/>
                            <field name="customers"/>
                            <field name="company"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                            <page string="Comments">
                                <field name="comments"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_digizilla_list" model="ir.ui.view">
            <field name="name">digizilla.digizilla.list</field>
            <field name="model">digizilla.digizilla</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="country"/>
                    <field name="joining_date"/>
                    <field name="tags"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>

